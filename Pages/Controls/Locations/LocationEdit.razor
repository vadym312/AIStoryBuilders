                        {
                            Severity = NotificationSeverity.Error,
                            Summary = "Error",
                            Detail = "Location Name is required",
                            Duration = 4000
                        });
                return;
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
                    {
                        Severity = NotificationSeverity.Error,
                        Summary = "Error",
                        Detail = ex.Message,
                        Duration = 4000
                    });
        }
    }


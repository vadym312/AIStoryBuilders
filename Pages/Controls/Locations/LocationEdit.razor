            {
                if (objLocation.LocationName.Length < 1)
                {
                    NotificationService.Notify(
                    new NotificationMessage
                            {
                                Severity = NotificationSeverity.Error,
                                Summary = "Error",
                                Detail = "Location Name is required",
                                Duration = 4000
                            });
